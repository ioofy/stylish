{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": false,
    "target": "esnext",
    "noEmit": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "moduleResolution": "node",
    "baseUrl": "src/",
    "paths": {
      "theme/*": ["theme/*"],
      "components/*": ["components/*"],
      "layout/*": ["layout/*"],
      "utils/*": ["utils/*"],
      "system/*": ["system/*"],
      "interface/*": ["interface/*"],
      "typography/*": ["typography/*"],
      "stories/*": ["stories/*"]
    }
  },
  "include": ["src", "@types"],
  "exclude": ["dist", "node_modules"]
}
